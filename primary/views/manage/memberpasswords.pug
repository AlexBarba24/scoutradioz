extends ../layout
block content
	h3 Organization Members
	h6
		i Make sure to click or tap "Update" when you modify each member.
	div(class="w3-container w3-section w3-auto")
		div(class="w3-row")
			div(class="w3-col m4 w3-padding-small w3-label") Name&nbsp;&nbsp;
			div(class="w3-col m2 w3-padding-small") Has Custom Password?
		each members, role in membersByRole
			div(class="w3-row")
				br 
				h4=role
			each member in members
				div(class="w3-row")
					div(class="w3-col s12 m0")
						hr
					input(type="hidden" name="memberId" value=member._id)
					div(class="w3-col m4 w3-label w3-padding-small")
						div(class="theme-inline-padding") 
							label #{member.name}
					div(class="w3-col m2")
						- if (member.password == "default")
							- var itemClass = "theme-red audit-card";
							- var itemChar = 'N'
						- else
							- var itemClass = "w3-green audit-card"
							- var itemChar = 'Y';
						div(class="w3-show-inline-block")
							div(class=itemClass)
								span #{itemChar}
					//Password RESET TO DEFAULT
					div(class="w3-col m2 w3-padding-small")
						button(class="w3-btn w3-block theme-submit" onclick=``) Reset to Default
					//
		hr
		
	script.
		
		function updateMember( memberId ){
			
			var memberForm = $(`#updateMember${memberId}`);
			
			var memberFormContents = memberForm.serialize();
			
			$.post( '/manage/members/updatemember', memberFormContents, function(response){
				
				//This is the page-determined response status code
				switch( response.status ){
					case 401:
						NotificationCard.error(response.message);
						break;
					case 200:
						NotificationCard.show(response.message);
						break;
				}
				
				setTimeout(function(){
					//window.location.href = window.location.href;
				}, 1000);
			})
		}