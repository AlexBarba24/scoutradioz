//-
	Admin index. Provides links to various administative pages.
	PARAM
		current		[String] Current event key.
	CALLED FROM
		adminindex.js	'/'
	//
extends ../layout
block content
	h3=title
	div(class="w3-container w3-section")
		h4 Resync
		a(href="/admin/resyncteams") 
			div(class="gear-btn theme-link w3-btn w3-section")
				span Resync teams
		a(href="/admin/recalcderived") 
			div(class="gear-btn theme-link w3-btn w3-section")
				span Recalc derived metrics
		form(action="/admin/resyncevents" method="GET")
			input(type="text" name="year" value="2020")
			input(type="text" name="start" value="m")
			input(type="text" name="end" value="n")
			input(type="submit" value="Submit")
		a(href="/admin/dngn3") 
			div(class="gear-btn theme-link w3-btn w3-section")
				span Use Case 3
	div(class="w3-container w3-section")
		h4 TBA Data
		a(href="/admin/externaldata/events") 
			div(class="gear-btn theme-link w3-btn w3-section")
				span Events
		a(href=`/admin/externaldata/matches?event_key=${event_key}`) 
			div(class="gear-btn theme-link w3-btn w3-section")
				span Match data
		a(href="/admin/externaldata/teams") 
			div(class="gear-btn theme-link w3-btn w3-section")
				span All teams (Load page with caution)


	div(class="w3-container w3-section")
		h4 Testing functions - CAREFUL

		form#posttowebhook(name="posttowebhook" method="post" action="/webhook" enctype="text/plain")
			input#posttowebhookdata(type="hidden", name='{"message_type": "admin_test", "trash": "' value='"}')
