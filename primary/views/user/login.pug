//-
	Page to log in to your organization.
		user.js
		'/user/login'
	//
extends ../layout
block content
	form#login-form(name="login-form" method="post" action="/user/login")
		h3(class="theme-text")=title
		div(class="w3-container w3-padding-16")
			div(class="w3-quarter w3-label theme-inline-padding")
				label Organization Password: 
			div(class="w3-half")
				input(type="hidden" name="user" value=org.org_key id="username")
				input(class="w3-input theme-input w3-no-border theme-inline-padding" type="password" name="org_password")
			if redirectURL
				input(type="hidden" name="redirectURL" value=redirectURL)
		div(class="w3-padding-16")
			input(type="submit" class="gear-btn theme-submit w3-btn" value="Next")
		script.
			$('input[name=org_password]').focus();