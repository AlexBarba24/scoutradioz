extends ../layout
block content
	form#login-form(name="login-form" method="post" action="/user/changepassword")
		h3(class="theme-text")=title
		div(class="w3-container w3-padding-16")
			div(class="w3-quarter w3-label theme-inline-padding")
				label Current Password: 
			div(class="w3-half")
				input(class="w3-input theme-input w3-no-border theme-inline-padding" placeholder="Leave blank if you do not have your own password yet." type="password" name="currentPassword")
		br 
		div(class="w3-container w3-padding-16")
			div(class="w3-quarter w3-label theme-inline-padding")
				label New Password: 
			div(class="w3-half")
				input(class="w3-input theme-input w3-no-border theme-inline-padding" type="password" name="newPassword1")
		div(class="w3-container w3-padding-16")
			div(class="w3-quarter w3-label theme-inline-padding")
				label Confirm: 
			div(class="w3-half")
				input(class="w3-input theme-input w3-no-border theme-inline-padding" type="password" name="newPassword2")
		div(class="w3-padding-16")
			input(type="submit" class="gear-btn theme-submit w3-btn" value="Change Password")