{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./build",
		"sourceMap": true,
		"sourceRoot": "./src",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"declarationDir": "./types",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"newLine": "crlf",
		"composite": true,
		//   "removeComments": true,
	},
	"include": [
		"./src/*"
	],
	"ts-node": {
		"transpileOnly": true, // VS Code has type checking built in, and TSC will also do it when we want to do a proper build.
	}
}