{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		// "rootDir": "..",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"newLine": "crlf",
		//   "removeComments": true,
	},
	"include": [
		"./src/*"
	],
	"ts-node": {
		"transpileOnly": true, // VS Code has type checking built in, and TSC will also do it when we want to do a proper build.
	},
} 